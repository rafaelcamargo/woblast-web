{
  "index": {
    "source": {
      "file": "src/index.html"
    },
    "dist": {
      "root": "./dist",
      "file": "./dist/index.html"
    }
  },
  "scripts": {
    "source": {
      "root": "src/scripts/",
      "index": "src/scripts/app.js"
    },
    "dist": {
      "filename": {
        "prod": "assets/[name]-[hash].js",
        "dev": "assets/[name].js"
      }
    }
  },
  "styles": {
    "source": {
      "root": "src/styles/"
    },
    "dist": {
      "filename": {
        "prod": "assets/[name]-[hash].css",
        "dev": "assets/[name].css"
      }
    }
  },
  "images": {
    "source": {
      "root": "src/images/",
      "files": "src/images/**/*.*"
    },
    "dist": {
      "root": "assets/images/[name].[ext]"
    }
  },
  "tests": {
    "source": {
      "files": [
        "src/scripts/**/*.js",
        "!src/api/**/*.js",
        "!src/scripts/**/mocks/**/*.js"
      ]
    }
  },
  "environments": {
    "source": {
      "root": "environments"
    }
  },
  "server": {
    "port": 9000,
    "host": "0.0.0.0"
  }
}
