@require '_variables'
@require '_mixins'

html,
body
  margin 0
  background-color $color-grey-light
  color $color-darkest
  font-size 16px
  font-family $font-family-primary
  font-weight 300

h1, h2, h3, h4, h5, h6
  margin 0
  font-weight 400

h1
  font-size $font-size-xxl
  letter-spacing -1px

h2
  font-size $font-size-xl

h3
  font-size $font-size-md

p
  margin 0
  line-height 1.5

ul
  margin 0
  padding 0
  list-style-type none

input
  width 100%
  padding 0 10px
  font-size $font-size-sm
  line-height 35px
  border 1px solid $color-grey
  box-sizing(border-box)
  border-radius(4px)
